<div class="container" id="dashboard">
  <div class="row">
    <div class="col-md-8 offset-md-6">
      <%= cl_image_tag @user.photo, class: 'avatar' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-6">
      <h4>First name:</h4>
      <h3><%= @user.first_name %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-6">
      <h4>Last name:</h4>
      <h3><%= @user.last_name %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-6">
      <h4>Email:</h4>
      <h3><%= @user.email %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-6">
      <%= link_to 'Edit', edit_user_registration_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
